pipeline {
    agent any
    
    environment {
        DOCKER_IMAGE = "petclinic-app"
        DOCKER_TAG = "${BUILD_NUMBER}"
        CONTAINER_NAME = "petclinic-container"
        HOST_PORT = "8081"
        CONTAINER_PORT = "8080"
        NETWORK = "test-compose_app-network"
    }
    
    stages {
        stage('Checkout') {
            steps {
                echo "üîÑ R√©cup√©ration du code source..."
                checkout scm
            }
        }
        
        stage('Build with Maven in Docker') {
            agent {
                docker {
                    image 'maven:3.8.5-openjdk-17'
                    args '-v $HOME/.m2:/root/.m2'
                }
            }
            steps {
                echo "üî® Compilation du projet avec Maven..."
                sh 'mvn clean package -DskipTests'
            }
        }
        
        stage('Build Docker Image') {
            steps {
                echo "üê≥ Construction de l'image Docker..."
                script {
                    sh """
                        docker build -t ${DOCKER_IMAGE}:${DOCKER_TAG} .
                        docker tag ${DOCKER_IMAGE}:${DOCKER_TAG} ${DOCKER_IMAGE}:latest
                    """
                }
            }
        }
        
        stage('Stop Old Container') {
            steps {
                echo "üõë Nettoyage de tous les conteneurs petclinic..."
                script {
                    sh """
                        docker ps -aq --filter name=${CONTAINER_NAME} | xargs -r docker rm -f || true
                        echo "‚úÖ Nettoyage termin√©"
                    """
                }
            }
        }
        
        stage('Deploy') {
            steps {
                echo "üöÄ D√©ploiement de l'application..."
                script {
                    sh """
                        docker run -d \
                            --name ${CONTAINER_NAME} \
                            --network ${NETWORK} \
                            -p ${HOST_PORT}:${CONTAINER_PORT} \
                            ${DOCKER_IMAGE}:latest
                        
                        echo "‚úÖ Conteneur d√©marr√©"
                        docker ps --filter name=${CONTAINER_NAME}
                    """
                }
            }
        }
        
        stage('Health Check') {
            steps {
                echo "üè• V√©rification de la sant√©..."
                script {
                    sh """
                        echo "‚è≥ Attente 30s pour d√©marrage..."
                        sleep 30
                        
                        echo ""
                        echo "üîç Logs du conteneur :"
                        docker logs ${CONTAINER_NAME} --tail 20
                        
                        echo ""
                        echo "üß™ Test HTTP interne :"
                        docker exec ${CONTAINER_NAME} curl -f http://localhost:${CONTAINER_PORT} > /dev/null 2>&1 && echo "‚úÖ Application r√©pond !" || echo "‚ö†Ô∏è Application pas encore pr√™te"
                        
                        echo ""
                        echo "üìä Statut conteneur :"
                        docker ps --filter name=${CONTAINER_NAME} --format "table {{.Names}}\\t{{.Status}}\\t{{.Ports}}"
                    """
                }
            }
        }
        
        stage('Access Info') {
            steps {
                echo "üìã Informations d'acc√®s"
                script {
                    sh """
                        echo ""
                        echo "========================================="
                        echo "üåê Application accessible sur :"
                        echo "   http://localhost:${HOST_PORT}"
                        echo ""
                        echo "üê≥ Conteneur : ${CONTAINER_NAME}"
                        echo "üìä Voir logs : docker logs -f ${CONTAINER_NAME}"
                        echo "========================================="
                    """
                }
            }
        }
    }
    
    post {
        always {
            echo "üßπ Nettoyage des images inutilis√©es..."
            sh 'docker image prune -f'
        }
        success {
            echo "‚úÖ LE PIPELINE A R√âUSSI !"
            echo "üåê Acc√©dez √† l'application : http://localhost:${HOST_PORT}"
        }
        failure {
            echo "‚ùå LE PIPELINE A √âCHOU√â"
            echo "üìä Logs du conteneur :"
            sh 'docker logs ${CONTAINER_NAME} --tail 50 || echo "Conteneur introuvable"'
        }
    }
}
